<html>
<head>
<title>
Articles
</title>
</head>
<body>
<h1>Articles</h1>
<table class = "table">
	<thead>
		<tr>
			<td>Title</td>
			<td>Author</td>
			<td>Published At</td>
			<td>Content</td>
			<td>Edit</td>
			<td>Delete</td>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= link_to article.title, article %></td>
			<td><%= article.author %></td>
			<td><%= article.published_at %></td>
			<td><%= article.content %></td>
			<td><%= link_to "Edit", edit_article_path(article) %></td>
			<td><%=link_to "Delete", article_path(article), :method => :delete, :class => "delete", :confirm => "Are you sure ?"%></td>
		</tr>
		<% end %>
	</tbody>
</table>
	<%= link_to 'Create New Article', new_article_path %>
</body>
</html>
